    .separador td {
        height: 2px;
        background-color: rgba(51, 153, 255,0.8);
    }
    /* Estilos mejorados que no interfieren con Bootstrap */

    .dropdown-dark {
        background-color: #000;
        color: #fff;
        padding: 8px;
        border-radius: 4px;
        border: 1px solid #333;
        width: 100%;
        height: 8%;
        margin-bottom: 10px;
        font-size: 18px;
    }


        .dropdown-dark option {
            background-color: #000;
            color: #fff;
            font-size: 25px;
        }

    table {
        max-width: 100%;
    }

    .table-hover tbody tr:hover {
        background: rgb(51, 153, 255);
        color: white;
        border-radius: 250px;
    }

        .table-hover tbody tr:hover i.fas {
            color: white !important;
            transform: scale(1.4);
            transition: all 0.4s ease;
            cursor: pointer;
        }



    i {
        margin-left: 8px;
    }

    .cmdEditarCatalogo:hover {
        transform: scale(1.2);
        transition: transform 0.3s ease;
    }

    .rowmar {
        margin-top: 50px;
    }

    /* Eliminé los estilos que afectan el layout de Bootstrap */

    /* Estilos del switch */
    .custom-switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 30px;
        margin-right: 10px;
    }

    .hidden-switch {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .switch-slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ff4444;
        transition: .4s;
        border-radius: 34px;
    }

        .switch-slider:before {
            position: absolute;
            content: "";
            height: 18px;
            width: 18px;
            left: 7px;
            bottom: 7px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    .hidden-switch:checked + .switch-slider {
        background-color: #4CAF50;
    }

        .hidden-switch:checked + .switch-slider:before {
            transform: translateX(18px);
        }

    /* Estilo del input */
    .switch-input {
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
        width: 150px;
        transition: border-color 0.3s;
    }

    label {
        font-size: 20px
    }

    input {
        font-size: 20px;
    }
</style>

