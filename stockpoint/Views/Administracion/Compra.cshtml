    /* Eliminé los estilos que afectan el layout de Bootstrap */

    /* Estilos del switch */
    .custom-switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 30px;
        margin-right: 10px;
    }

    .hidden-switch {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .switch-slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ff4444;
        transition: .4s;
        border-radius: 34px;
    }

        .switch-slider:before {
            position: absolute;
            content: "";
            height: 18px;
            width: 18px;
            left: 7px;
            bottom: 7px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    .hidden-switch:checked + .switch-slider {
        background-color: #4CAF50;
    }

        .hidden-switch:checked + .switch-slider:before {
            transform: translateX(18px);
        }

    /* Estilo del input */
    .switch-input {
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
        width: 150px;
